@media screen and (min-width:768px) and (max-width:1023px) {
  #technicalSkills li {
     height: 300px;
  }
  body{
    font-size: 80%;
  }
}

@media screen and (min-width:480px) and (max-width:767px) {
   #technicalSkills li {
       height: 200px;

   }
   body{
       font-size: 70%;

   }
   #blog .container
   {
       flex-direction: column;
   }
   #blog .container .right
   {
       flex-direction: row;
   }
   #contact .container
   {
       flex-direction: column;
   }
}

@media screen and (max-width:479px) {
   #technicalSkills li {
       height: 150px;

   }
   body{
       font-size: 70%;

   }

   #technicalSkills .barNumber {
     /*font-size: 150%;*/
   }

