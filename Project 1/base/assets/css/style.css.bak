   font-family: 'Raleway', sans-serif;
   padding: 20px;
   padding-top: 50px;
}

#technicalSkills ul {
   /*outline: 1px solid #8CACFF;*/
   width: 90%;
   margin: auto;
   /*padding: 20px;*/
   text-align: center;
}

#technicalSkills li {
   /*outline: 1px solid #8CACFF;*/
   position: relative;
   display: inline-block;
   margin: 2%;
   /*width: 200px;*/
   max-width: 200px;
   width: 20%;
   height: 400px;
   /*height: width*2;*/
}

#technicalSkills .barNumber {
   position: absolute;
   /*position: relative;*/
   /*top: 290px;*/
   top: 75%;
   /*why does this work exactly?*/
   left: 0;
   right: 0;

   opacity: 0.3;
   font-family: 'Lato', sans-serif;
   font-weight: 400;
   font-size: 350%;
   color: white;
}

#technicalSkills .barDesc {
   position: absolute;
   top: 90%;
   left: 0;
   right: 0;

   font-family: 'Lato', sans-serif;
   font-weight: 400;
   /*font-size: 150%;*/
   font-size: 150%;
   color: white;
   text-align: center;
   /* offset-x | offset-y | blur-radius | color */
   text-shadow: 1px 1px 1px black;
}

#barHTML {
   outline: 1px solid #60B2A9;
   height: 95%;
   position: relative;
   top: 5%;

   background-image: -webkit-gradient(linear, left bottom, left top, color-stop(0, #60B2A9),
   color-stop(1,#AEDAD5));
}

#barCSS {
   outline: 1px solid #E1AF9F;
   height: 80%;
   position: relative;
   top: 20%;

   background-image: -webkit-gradient(linear, left bottom, left top, color-stop(0, #E1AF9F),
   color-stop(1,#F3DAD4));
   vertical-align: bottom;
}

#barJS {
   outline: 1px solid #DFAE37;
   height: 90%;
   position: relative;
   top: 10%;

   background-image: -webkit-gradient(linear, left bottom, left top, color-stop(0, #DFAE37),
   color-stop(1,#EFC563));
}

#barWP {
   outline: 1px solid #DCBA83;
   height: 80%;
   position: relative;
   top: 20%;

   background-image: -webkit-gradient(linear, left bottom, left top, color-stop(0, #BC8E5B),
   color-stop(1,#DCBA83));
}

